[Unit]
BindsTo=%i.device
After=%i.device

[Service]
Type=simple
User=pi
ExecStartPre=+/bin/sh -c '/bin/sync; /bin/mount -o remount,rw /'
ExecStart=/usr/local/bin/gphoto2-auto-import.py
ExecStopPost=+/bin/sh -c '/bin/sync; /bin/mount -o remount,ro /'
ExecStopPost=/usr/local/bin/blinkt-disk-usage.py
WorkingDirectory=/home/pi/Pictures
